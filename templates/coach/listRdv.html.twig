{% extends 'base2.html.twig' %}

{% block title %}Rendez vous{% endblock %}
{% block activation2 %}active{% endblock %}
{% block body %}
    <section class="wrapper">
        <h3><i class="fa fa-angle-right"></i>Liste - Rendez-vous</h3>
        <div class="row mt">
            <div class="col-md-12">
                <div class="content-panel">
                    <table class="table table-striped table-advance table-hover">
                        <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Prenom</th>
                            <th>Email</th>
                            <th>Tel</th>
                            <th>Date</th>
                            <th>Message</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for appointment in appointments %}
                            <tr>
                                <td>{{ appointment.nom }}</td>
                                <td>{{ appointment.prenom }}</td>
                                <td>{{ appointment.email }}</td>
                                <td>{{ appointment.tel }}</td>
                                <td>{{ appointment.date }}</td>
                                <td>{{ appointment.message }}</td>
                                <td>
                                    <a href="{{ path('appointment_show', {'id': appointment.id}) }}">show</a>
                                    <a href="{{ path('appointment_edit', {'id': appointment.id}) }}">edit</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="8">Pas de rendez-vous</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
