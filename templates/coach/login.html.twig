{% extends 'baseFrontend.html.twig' %}
{#{% form_theme form 'bootstrap_4_layout.html.twig' %}#}
{% block title %}Login{% endblock %}

{% block body %}
<div id="login-page">
    <div class="container">
        <form class="form-login" action="{{ path('loginCoach') }}" method="post" >
            <h2 class="form-login-heading">Authentification</h2>
            <div class="login-wrap">
                <input type="text" name="_username" class="form-control" placeholder="Email" autofocus>
                <br>
                <input type="password" name="_password" class="form-control" placeholder="Password">
                <br>
                <button class="btn btn-theme btn-block" type="submit"><i class="fa fa-lock"></i>Connexion</button>
                <br>
                <span>
                    <a data-toggle="modal"> Forgot Password?</a>
                    </span>
                <hr>
            </div>
        </form>
    </div>
</div>
{% endblock %}