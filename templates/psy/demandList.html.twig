{% extends 'baseBackend.html.twig' %}

{% block title %}Psychothérapeutes{% endblock %}
{% block activation4 %}active{% endblock %}
{% block body %}k body %}
    <section class="wrapper">
        <h3><i class="fa fa-angle-right"></i> Demandes d'inscriptions - Psychothérapeutes</h3>
        <!-- row -->
        <div class="row mt">
            <div class="col-md-12">
                <div class="content-panel">
                    <table class="table table-striped table-advance table-hover">
                        <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Prenom</th>
                            <th>Adresse</th>
                            <th>Telephone</th>
                            <th>Date Inscription</th>
                            <th>Certification</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for p in psy %}
                            <tr>
                                <td>{{ p.nom }}</td>
                                <td>{{ p.prenom }}</td>
                                <td>{{ p.adresse }} </td>
                                <td>{{ p.telephone }}</td>
                                <td>{{ p.dateInscription | date  }}</td>
                                <td></td>
                                <td>
                                    <button class="btn btn-info btn-xs"><i class="fa fa-eye"></i></button>
                                    <form style="display: inline-block" action="{{ url('validPsy',{'id':p.idCoach}) }}">
                                        <button class="btn btn-success btn-xs"><i class="fa fa-check"></i></button>
                                    </form>
                                    <form style="display: inline-block" action="{{ url('rejectPsy',{'id':p.idCoach}) }}">
                                        <button class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></button>
                                    </form>

                                </td>
                            </tr>
                        {% endfor %}

                        </tbody>
                    </table>
                </div>
                <!-- /content-panel -->
            </div>
            <!-- /col-md-12 -->
        </div>
        <!-- /row -->
    </section>
{% endblock %}
